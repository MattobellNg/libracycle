<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock_pack_sub_operation_form_view" model="ir.ui.view">
            <field name="name">stock.pack.sub.operation.form</field>
            <field name="model">stock.pack.sub.operation</field>
            <field name="arch" type="xml">
                <form string="Sub Operation record">
                    <sheet>
                        <group>
                            <group>
                                <field name="stock_move_id"/>
                                <field name="operation_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="stock_pack_sub_operation_tree_view" model="ir.ui.view">
            <field name="name">stock.pack.sub.operation.tree</field>
            <field name="model">stock.pack.sub.operation</field>
            <field name="arch" type="xml">
                <tree string="Sub Operation Tree">
                    <field name="stock_move_id"/>
                    <field name="location_id"/>
                    <field name="location_dest_id"/>
                    <field name="operation_id" invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>