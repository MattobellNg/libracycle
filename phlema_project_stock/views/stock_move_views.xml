<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_tree_receipt_picking_inherited" model="ir.ui.view">
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree_receipt_picking"/>
            <field name="priority" eval="500"/>
            <field name="arch" type="xml">
                 <field name="date_expected" position="before">
                    <field name="item_code"/>
                </field>
                <field name="state" position="before">
                    <field name="current_location_id" string="Current Location"/>
                </field>
                <field name="product_id" position="after">
                    <field name="item_size"/>
                    <field name="product_uom_id"/>
                </field>
            </field>
        </record>

        <record id="stock_move_form_inherit" model="ir.ui.view">
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="priority" eval="900"/>
            <field name="arch" type="xml">

                <field name="product_id" position="before">
                    <field name="item_code"/>
                </field>
                <field name="product_uom_qty" position="before">
                    <field name="item_size"/>
                </field>
                <field name="state" position="before">
                    <field name="current_location_id" string="Current Location"/>
                </field>


                <xpath expr="//field[@name='product_uom_qty']" position="attributes">
                    <attribute name="readonly">True</attribute>
                    <attribute name="force_save">True</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>