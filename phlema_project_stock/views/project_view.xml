<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_category_form_inherit" model="ir.ui.view">
            <field name="name">project.project.category.form.inherited</field>
            <field name="model">project.project.category</field>
            <field name="inherit_id" ref="project_project_category.view_base_project_category_form"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project_type_id']" position="after">
                    <field name="delivery_type_id"/>
                </xpath>
            </field>
        </record>
        <record id="project_form_inherit" model="ir.ui.view">
            <field name="name">Project description inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project_description.project_form"/>
            <field name="arch" type="xml">

                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_delivery" icon="fa-refresh">
                        <field string="Awaiting Delivery" name="item_awaiting_delivery_count" widget="statinfo" options="{'label_field': 'label_items'}"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_delivery" icon="fa-dropbox">
                        <field string="Delivered" name="item_delivery_count" widget="statinfo" options="{'label_field': 'label_items'}"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_delivery" icon="fa-truck">
                        <field string="Operations" name="delivery_count" widget="statinfo" options="{'label_field': 'label_items'}"/>
                    </button>
                      <button class="oe_stat_button" type="object" name="action_view_returned_container" icon="fa-th-large">
                        <field string="Returned Container" name="container_return_count" widget="statinfo" options="{'label_field': 'label_items'}"/>
                    </button>
                </div>

                <xpath expr="//field[@name='project_schedule_items_ids']" position="replace">
                      <field name="project_schedule_items_ids" context="{'default_project_id': id}" >
                            <tree string="Project Schedule items" editable="bottom">
                              <field name="name"/>
                              <field name="product_id"/>
                              <field name="project_id"/>
                              <field name="description"/>
                              <field name="size"/>
                              <field name="product_uom_id"/>
                              <field name="stock_delivery_state" readonly="1" force_save="1"/>
                              <field name="project_type_id" invisible="1"/>
                           </tree>
                      </field>
                </xpath>


            </field>
        </record>
    </data>
</odoo>