<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_crossovered_budget_line_tree_inherit" model="ir.ui.view">
            <field name="name">crossovered.budget.line.tree.inherit</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="inherit_id" ref="account_budget.view_crossovered_budget_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='practical_amount']" position="after">
                    <field name="budget_variance" sum="Total Variance"/>
                </xpath>
            </field>
        </record>

        <record id="view_crossovered_budget_line_form_inherit" model="ir.ui.view">
            <field name="name">crossovered.budget.line.form.inherit</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="inherit_id" ref="account_budget.view_crossovered_budget_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='practical_amount']" position="after">
                    <field name="budget_variance" attrs="{'readonly': [('crossovered_budget_state', '!=', 'draft')]}"/>
                </xpath>
            </field>
        </record>
        <record id="view_crossovered_budget_form_inherit" model="ir.ui.view">
            <field name="name">crossovered.budget.form.inherit</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id" ref="account_budget.crossovered_budget_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='crossovered_budget_line']/tree" position="inside">
                    <field name="budget_variance" sum="Total Variance" after="practical_amount"/>
                </xpath>
                <xpath expr="//field[@name='crossovered_budget_line']/form//group[1]" position="inside">
                    <field name="budget_variance" after="practical_amount"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>