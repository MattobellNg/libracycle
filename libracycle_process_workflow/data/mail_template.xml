<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="libracycle_mail_template" model="mail.template">
            <field name="name">Approval Request Officer</field>
            <field name="email_from">{{ctx.get('email_from')}}</field>
            <field name="subject">Approval Request {{ ctx.get('title') }}</field>
            <field name="email_to">{{ctx.get('recipient') }}</field>
            <field name="model_id" ref="account.model_account_move" />
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hi!
                        <div>{{object.name}} has been submitted for your attention, kindy check and attend to the document accordingly. </div>
                        <div><a href="${ctx.get('url')}">Please follow the link</a></div>
                        <div>Regards,</div>
                        <div>System auto generated email</div>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>