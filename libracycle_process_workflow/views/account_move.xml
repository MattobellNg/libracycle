<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_post']" position="before">
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" groups="libracycle_process_workflow.group_admin" attrs="{'invisible': ['|', ('move_type', '=', 'out_invoice'), ('state', '!=', 'draft')]}"  />
                    <button name="action_officer_approve" string="Approve" type="object" class="oe_highlight" states="officer" />
                    <button name="action_qac_approve" string="Review" type="object" class="oe_highlight" states="qac" />
                    <button name="action_director1_approve" string="Approve" type="object" class="oe_highlight" states="director_1" />
                    <button name="action_director2_approve" string="Approve" type="object" class="oe_highlight" states="director_2" />
                    <button name="action_reject" string="Reject" type="object" class="oe_link" states="officer,qac,director_1,director_2" />
                </xpath>
                <xpath expr="//button[@name='action_post'][2]" position="replace">
                    <button name="action_post" string="Post" class="oe_highlight" type="object" groups="account.group_account_invoice,account.group_account_manager" data-hotkey="v" attrs="{'invisible': ['|', ('auto_post', '=', True), ('move_type', '!=', 'entry')]}" states="approved" />
                    <button name="action_post" string="Post" class="oe_highlight" type="object" groups="account.group_account_invoice,account.group_account_manager" data-hotkey="v" attrs="{'invisible': [('move_type', 'in', ['in_invoice', 'in_receipt'])]}"/>


                </xpath>
            </field>
        </record>
    </data>
</odoo>