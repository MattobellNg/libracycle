<?xml version="1.0"?>
<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//h2[hasclass('mt16')]" position="replace">
            <h2 class="mt16">
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span>Invoice # </span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Pro-Forma Invoice # </span>
                </t>
                <span t-field="doc.name" />
            </h2>
        </xpath>
        <xpath expr="//div[@id='informations']" position="after">
            <div class="row mt64 mb64" id="lbc1">
                <div t-if="doc.project_id.job_refs" class="col-auto col-3 mw-100 mb-2">
                    <strong>Job:</strong>
                    <p class="m-0" t-field="doc.project_id.job_refs" />
                </div>
                <div t-if="doc.project_id.ship_line" class="col-auto col-3 mw-100 mb-2">
                    <strong>Carrier:</strong>
                    <p class="m-0" t-field="doc.project_id.ship_line" />
                </div>
                <div t-if="doc.partner_id.ref_number" class="col-auto col-3 mw-100 mb-2">
                    <strong>Client Ref:</strong>
                    <p class="m-0" t-field="doc.partner_id.ref_number" />
                </div>
            </div>
            <div class="row mt64 mb64" id="lbc2">
                <div t-if="doc.project_id.mode_shipment_air_sea" class="col-auto col-3 mw-100 mb-2">
                    <strong>Job Type:</strong>
                    <p class="m-0" t-field="doc.project_id.mode_shipment_air_sea" />
                </div>
                <div t-if="doc.project_id.port_many_loading" class="col-auto col-3 mw-100 mb-2">
                    <strong>Port of Loading:</strong>
                    <p class="m-0" t-field="doc.project_id.port_many_loading" />
                </div>
                <div t-if="doc.project_id.country_of_loading" class="col-auto col-3 mw-100 mb-2">
                    <strong>Origin:</strong>
                    <p class="m-0" t-field="doc.project_id.country_of_loading" />
                </div>
            </div>
            <div class="row mt64 mb64" id="lbc2">
                <div t-if="doc.project_id.bol_awb_ref" class="col-auto col-3 mw-100 mb-2">
                    <strong>BOL/AWB Number:</strong>
                    <p class="m-0" t-field="doc.project_id.bol_awb_ref" />
                </div>
                <div t-if="doc.project_id.destination_port" class="col-auto col-3 mw-100 mb-2">
                    <strong>Port of Dishcarge:</strong>
                    <p class="m-0" t-field="doc.project_id.destination_port" />
                </div>
                <div class="col-auto col-3 mw-100 mb-2">
                    <strong>Destination:</strong>
                    <p class="m-0">Nigeria</p>
                </div>
            </div>
            <div class="row mt64 mb64" id="lbc3">
                <div t-if="doc.project_id.job_form_m" class="col-auto col-3 mw-100 mb-2">
                    <strong>Form M Number:</strong>
                    <p class="m-0" t-field="doc.project_id.job_form_m" />
                </div>
                <div t-if="doc.project_id.custom_terminal" class="col-auto col-3 mw-100 mb-2">
                    <strong>Terminal:</strong>
                    <p class="m-0" t-field="doc.project_id.custom_terminal" />
                </div>
                <div t-if="doc.project_id.ves_line" class="col-auto col-3 mw-100 mb-2">
                    <strong>Vessel:</strong>
                    <p class="m-0" t-field="doc.project_id.ves_line" />
                </div>
            </div>
        </xpath>
        <xpath expr="//p[@id='fiscal_position_remark']" position="after">
            <div class="row">
                <div class="col-6 offset-6" style="font-size: 11px;  text-transform: uppercase;">
                    <p t-field="doc.bank_account_id.description" />
                    <table class="table table-striped table-borderless table-sm">
                        <tbody>
                            <tr>
                                <td>Bank Name</td>
                                <td><span t-field="doc.bank_account_id.bank_id" /> </td>
                            </tr>
                            <tr>
                                <td>Account Number</td>
                                <td><span t-field="doc.bank_account_id.acc_number" /></td>
                            </tr>
                            <tr>
                                <td>Account Holder Name</td>
                                <td><span t-field="doc.bank_account_id.acc_holder_name" /></td>
                            </tr>
                            <tr>
                                <td>Currency</td>
                                <td><span t-field="doc.bank_account_id.currency_id" /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </xpath>
    </template>
</odoo>