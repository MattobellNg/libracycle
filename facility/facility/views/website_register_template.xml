<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="apartments_page" name="Apartments">
        <t t-call="website.layout">
            <div class="container mt8">
                <div class="row">
                    <h1 class="page-header">Your Apartments</h1>
                    <t t-call="portal.portal_table">
                        <div class="modal-body">
                            <tr t-foreach="apartments" t-as="apartment">
                                <td class="text-center">
                                    <b><span style="font-size:38" t-esc="apartment.name"/></b>
                                    <div class="text-center">
                                        <img src="/facility/static/description/home.png" alt="apartment" style="height: 200px;"/>
                                    </div>
                                </td>
                                <td><br/><br/>
                                    <div class="text-center">
                                        <a t-attf-href="/facility/request/create/#{apartment.id}?{{ keep_query() }}"><span class="btn btn-primary">Create Request</span></a>
                                    </div>
                                    <br/><br/>
                                    <div class="text-center">
                                        <a t-attf-href="/facility/request/view/#{apartment.id}?{{ keep_query() }}"><span class="btn btn-primary">View Requests</span></a>
                                    </div>
                                </td>
                            </tr>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="case_page" name="Apartments Case">
        <t t-call="website.layout">
            <div class="container mt8">
                <div class="row">
                    <h1 class="page-header">Request</h1>
                    <t t-call="portal.portal_table">
                        <form action="/create/request" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="apartment_id" t-att-value="apartments.id"/>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="col-form-label" for="type">Title</label>
                                        <input type="text" class="form-control o_website_form_input" placeholder="Cockroaches, Bed bugs, General" name="name"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="col-form-label" for="instructions">Description</label>
                                        <input type="text" class="form-control o_website_form_input" placeholder="Description" name="description"/>
                                    </div>
                                </div>
                            </div>
                                <button style="margin: 36px;margin-left: 228px;" class="btn btn-success" >Submit</button>
                        </form>
                    </t>
                </div>
            </div>
        </t>
    </template>

 <template id="all_case_page" name="All Case page">
        <t t-call="website.layout">
            <div class="container mt8">
                <div class="row">
                    <h1 class="page-header">Cases</h1>
                    <t t-call="portal.portal_table">
                    <div class="modal-body">
                    </div>
                       <tr class="text-center">
                           <th>Name</th>
                           <th>Description</th>
                           <th>Created Date</th>
                           <th>State</th>
                       </tr>
                        <tr t-foreach="cases" t-as="case">
                            <td class="text-center">
                                <span t-esc="case.name"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="case.description"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="case.date_created"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="case.state" class="badge-success"/>
                            </td>
                        </tr>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="case_success">
        <t t-call="website.layout">
            <div class="container mt8">
                <div class="row">
                    <div class="alert alert-success text-center">
                        <p>Your booking details is submitted, our team will contact you shortly</p>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="facility_welcome" name="Facility">
        <t t-call="website.layout">
            <div class="container mt8">
                <div class="container mt-2">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="oe_structure">
                                <section class="s_text_block">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p>
                                                    Contact us about anything related to our facility or services.<br/>
                                                    We'll do our best to get back to you as soon as possible.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="text-center my-3" name="mail_button">
                                <a role="button" href="/facility/check" class="btn btn-primary" id="o_contact_mail">Submit a case</a>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <t t-call="website.company_description"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="facility_page" model="website.page">
        <field name="website_published">True</field>
        <field name="url">/facility</field>
        <field name="view_id" ref="facility_welcome"/>
    </record>

    <record id="menu_pest" model="website.menu">
        <field name="name">Facility</field>
        <field name="page_id" ref="facility_page"/>
    </record>

</odoo>