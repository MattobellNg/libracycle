<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled action to create retroactive attachment comments -->
        <record id="ir_cron_create_retroactive_attachment_comments" model="ir.cron">
            <field name="name">Create Retroactive Attachment Comments</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="state">code</field>
            <field name="code">model.create_retroactive_attachment_comments()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="priority" eval="5"/>
        </record>
    </data>
</odoo> 