                                <t t-if="o.sn_state == 'pre_alert'">
                                    <strong class="badge bg-primary text-wrap" style="width: 6rem;">Pre-Alert</strong>
                                </t>
                                <t t-else="">
                                    <span>Pre-Alert</span>
                                </t>
                                <span>|</span>
                                <t t-if="o.sn_state == 'awaiting_arrival'">
                                    <strong class="badge bg-primary text-wrap" style="width: 6rem;">Awaiting Arrival
                                    </strong>
                                </t>
                                <t t-else="">
                                    <span>Awaiting Arrival</span>
                                </t>
                                <span>|</span>
                                <t t-if="o.sn_state == 'in_clearing'">
                                    <strong class="badge bg-primary text-wrap" style="width: 6rem;">Inclearing</strong>
                                </t>
                                <t t-else="">
                                    <span>Inclearing</span>
                                </t>
                                <span>|</span>
                                <t t-if="o.sn_state == 'ready_to_load'">
                                    <!-- <strong id="ready_to_load" style='text-color:black;'>ReadytoLoad | </strong> -->
