<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_manifest_report" model="ir.actions.report">
        <field name="name">Generate Waybill</field>
        <field name="model">custom.manifest.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">customize_vpcs.custom_template_manifest_report</field>
        <field name="report_file">customize_vpcs.custom_template_manifest_report</field>
        <field name="binding_model_id" ref="model_custom_manifest_report"/>
    </record>

    <template id="custom_template_manifest_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="mb-4 mt-3">
                            <div class="row">
                                <div class="col-6" t-if="o.sn_no.partner_id">
                                    <div style='text-align:left;'>
                                        Partner :
                                        <span style='margin-left:10px;' t-field='o.sn_no.partner_id.name'/>
                                    </div>
                                    <div style='text-align:left;'>
                                        Address :
                                        <span style='margin-left:5px;' t-field='o.sn_no.partner_id.street'/>
                                        <span  t-field='o.sn_no.partner_id.street2'/>
                                        <span  t-field='o.sn_no.partner_id.city'/>
                                        <span  t-field='o.sn_no.partner_id.state_id.name'/>
                                        <span  t-field='o.sn_no.partner_id.zip'/>
                                        <span  t-field='o.sn_no.partner_id.country_id.name'/>
                                    </div>
                                    <div style='text-align:left;margin-bottom:20px;margin-top:50px;'>
                                        <span style='border:2px solid black;padding:5px;'>WAYBILL/DELIVERY NOTE</span>
                                        <br></br>
                                    </div>
                                    <div style='text-align:left;'>
                                        Transporter's Name
                                        <span style='float:right;' t-field='o.transportar_name'/>
                                    </div>
                                    <div style='text-align:left;'>
                                        Vehicle No
                                        <span style='float:right;border-bottom:1px;' t-field='o.truck_number'/>
                                    </div>
                                </div>

                                <div class='col-6'>
                                    <div style='text-align:left;'>
                                        No
                                        <span style='float:right;' t-field='o.waybill_no'/>
                                    </div>
                                    <div style='text-align:left;'>
                                        LPO NO:
                                    </div>
                                    <table style='border-collapse:collapse;width:100%;'>
                                        <tr>
                                            <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                <strong>Date: </strong>
                                            </td>
                                            <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                <t t-esc='o.delivery_begin_date'/>
                                            </td>
                                        </tr>
                                    </table>
                                    <div style='text-align:left;margin-top:75px;'>
                                        Driver Name
                                        <span style='float:right;' t-field='o.driver_name'/>
                                    </div>
                                    <div style='text-align:left;'>
                                        Driver Phone No
                                        <span style='float:right;border-bottom:1px;' t-field='o.phone_number'/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table style="border:1px solid black;width:100%">
                                        <thead>
                                            <tr>
                                                <th colspan="2" style='border:1px solid black;text-align:left;padding:8px;'>QTY.</th>
                                                <th style="border:1px solid black;text-align:left;padding:8px;width:70%">DESCRIPTION OF GOODS</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <!-- <td rowspan="2" colspan="2">A large cell</td> -->
                                                <td style='border:1px solid black;text-align:left;padding:8px;' rowspan='2' colspan='2'>
                                                    <t t-esc='o.container_size'/>
                                                </td>
                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                    BOL NO
                                                        <span style='float:right;' t-field='o.bl_number'/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                        CONTAINER NO
                                                        <span style='float:right;' t-field='o.Container_number'/>
                                                    </div>
                                                    <!-- <strong>CONTAINER NO  :</strong><t t-esc='o.Container_number'/> -->
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;' rowspan='2' colspan='2'></td>
                                                <td style='border:1px solid black;text-align:left;padding:8px;' >
                                                    <div style='text-align:left;'>
                                                        CONTAINER SEAL NO
                                                        <span style='float:right;' t-field='o.container_seal_no'/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                        QTY. RECEIVED (ORIGIN)
                                                        <span style='float:right;' t-field='o.qty_received_origin'/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;' rowspan='2' colspan='2'></td>

                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                        QTY. RECEIVED (DEST)
                                                        <span style='float:right;' t-field='o.qty_received_dest'/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                        CARGO NAME
                                                        <span style='float:right;' t-field='o.cargo_name'/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;' rowspan='2' colspan='2'></td>
                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                        DESTINATION
                                                        <span style='float:right;' t-field='o.time_to_destination'/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                        SEALED (YES/NO)
                                                        <span style='float:right;' t-field='o.sealed'/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;' rowspan='2' colspan='2'></td>
                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                        TRACKER FOUND (YES/NO)
                                                        <span style='float:right;' t-field='o.tracker_found'/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='border:1px solid black;text-align:left;padding:8px;'>
                                                    <div style='text-align:left;'>
                                                        ARRIVAL DATE
                                                        <span style='float:right;' t-field='o.barge_arrival_date'/>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <span>
                                        <strong>The Good(s) above is(are) delivered and received in good condition.</strong>
                                    </span>
                                </div>
                            </div>
                            <div class="row" style="margin-top:10px;">
                                <div class="col-6">
                                    <strong>Delivered By :</strong>
                                    <br></br>
                                    <br></br>
                                    <strong>Sign :</strong>
                                    <br></br>
                                    <br></br>
                                    <strong>Date :</strong>
                                    <br></br>
                                    <br></br>
                                </div>
                                <div class="col-6">
                                    <strong>Received By :</strong>
                                    <br></br>
                                    <br></br>
                                    <strong>Sign :</strong>
                                    <br></br>
                                    <br></br>
                                    <strong>Date :</strong>
                                    <br></br>
                                    <br></br>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>