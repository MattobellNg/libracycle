<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_expense_sheet_form" model="ir.ui.view">
            <field name="name">hr.expense.sheet.lbc.form</field>
            <field name="model">hr.expense.sheet</field>
            <field name='inherit_id' ref="hr_expense_show_balance.employee_advance_salary_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="journal_balance" groups="account.group_account_invoice,account.group_account_readonly"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>